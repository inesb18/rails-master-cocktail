<%= @cocktail.name %>
<ul>
  <% @cocktail.doses.each do |dose|%>
    <li>
      <%= dose.ingredient.name %>: <%= dose.description %>
      <%= link_to cocktail_dose_path(@cocktail,dose), method: "delete" do %>
        Delete
      <% end %>
    </li>
  <% end %>
</ul>

<%= link_to new_cocktail_dose_path(@cocktail), class: "add-dose" do %>
  Add a new ingredient
<% end %>

