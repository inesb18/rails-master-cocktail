<div class="banner-cocktail">
  <h1> <%= @cocktail.name %> </h1>
</div>

<div class="page-container">

  <div class="ingredients-of-cocktail">

    <h2>Ingredients</h2>

    <% if @cocktail.doses.empty? %>
      <p>No ingredient yet.</p>
    <% else %>

      <ul>
        <% @cocktail.doses.each do |dose|%>
          <li>
            <p> <strong> <%= dose.ingredient.name %>: </strong> <%= dose.description %> </p>
            <%= link_to cocktail_dose_path(@cocktail,dose), method: "delete" do %>
              Delete
            <% end %>
          </li>
        <% end %>
      </ul>
    <% end %>

    <div class="new-dose">

      <h2>Add an ingredient</h2>

      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient, collection: Ingredient.all.order(:name), prompt: "Choose an ingredient" %>
        <%= f.button :submit %>
      <% end %>

    </div>

  </div>

